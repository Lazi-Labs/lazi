# ===========================================
# LAZI CRM - Local Development Environment
# ===========================================
# Copy this file to .env.local in the project root
# and fill in your actual values
# ===========================================

# ===== DATABASE (UNCHANGED) =====
# Keep your production Supabase connection string
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres.xxxxx:your_password@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# ===== REDIS (LOCAL) =====
# Point to local Redis instance
REDIS_URL=redis://localhost:6379

# Optional Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# ===== SERVICETITAN API (UNCHANGED) =====
# Use the same production API credentials
# These are server-side only and will work from localhost
SERVICE_TITAN_CLIENT_ID=your_client_id_here
SERVICE_TITAN_CLIENT_SECRET=your_client_secret_here
SERVICE_TITAN_APP_KEY=your_app_key_here
DEFAULT_TENANT_ID=3222348440

# ServiceTitan API Configuration
SERVICE_TITAN_API_URL=https://api.servicetitan.io
SERVICE_TITAN_AUTH_URL=https://auth.servicetitan.io

# ===== API URLS (LOCAL) =====
# Point to local development services
ST_AUTOMATION_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# ===== NODE ENVIRONMENT =====
NODE_ENV=development

# ===== CORS =====
# Allow localhost origins for development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===== PLAID (if used) =====
# Keep production credentials but change environment and callback
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox
PLAID_REDIRECT_URI=http://localhost:3000/api/plaid/oauth-redirect

# ===== AWS S3 (UNCHANGED - if using) =====
# Keep production AWS credentials
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ===== TWILIO (UNCHANGED) =====
# Keep production Twilio credentials
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===== RESEND (UNCHANGED) =====
# Keep production Resend API key
RESEND_API_KEY=your_resend_api_key

# ===== JWT & SESSION SECRETS =====
# Generate secure random strings (min 32 characters)
# You can use: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_min_32_characters_long
SESSION_SECRET=your_session_secret_min_32_characters_long

# ===== AUTHENTICATION =====
# NextAuth or similar
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_min_32_chars

# ===== OPTIONAL: BullMQ Dashboard =====
# Credentials for accessing the BullMQ job queue dashboard
BULLMQ_DASHBOARD_USER=admin
BULLMQ_DASHBOARD_PASSWORD=admin123

# ===== OPTIONAL: Temporal (if used) =====
# TEMPORAL_ADDRESS=localhost:7233
# TEMPORAL_NAMESPACE=default

# ===== OPTIONAL: Stripe (if used) =====
# STRIPE_SECRET_KEY=sk_test_your_test_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===== OPTIONAL: SendGrid (if used) =====
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ===== OPTIONAL: OAuth Providers (if used) =====
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# ===== OPTIONAL: Analytics (if used) =====
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# ===== OPTIONAL: Sentry (if used) =====
# SENTRY_DSN=https://your_sentry_dsn
# NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn

# ===== OPTIONAL: Feature Flags =====
# ENABLE_FEATURE_X=true
# ENABLE_BETA_FEATURES=false

# ===== LOGGING =====
LOG_LEVEL=debug

