# ============================================
# LAZI AI - Environment Configuration Example
# ============================================
# Copy this file to .env.production and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=production

# Database (Supabase PostgreSQL)
# Get this from: Supabase Dashboard > Settings > Database > Connection String
# Use the "Connection Pooling" string (port 6543) for better performance
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# ServiceTitan API Credentials
# Get these from: https://developer.servicetitan.io/
SERVICE_TITAN_CLIENT_ID=your_client_id_here
SERVICE_TITAN_CLIENT_SECRET=your_client_secret_here
SERVICE_TITAN_APP_KEY=your_app_key_here
SERVICE_TITAN_TENANT_ID=your_tenant_id_here

# Security
# Generate a secure random string (minimum 32 characters)
JWT_SECRET=your_jwt_secret_minimum_32_characters_here

# Sync Configuration
ENABLE_SCHEDULED_SYNC=true
PRICEBOOK_CATEGORY_SYNC_ENABLED=true
PRICEBOOK_FULL_SYNC_ENABLED=true

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting (optional - defaults shown)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Token Management (optional - defaults shown)
TOKEN_REFRESH_BUFFER_SECONDS=300

# Retry Configuration (optional - defaults shown)
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Redis (optional - for caching and queues)
# REDIS_URL=redis://localhost:6379

# Logging (optional)
# LOG_LEVEL=info
